<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fxControllers.ForumPage">
   <children>
      <BorderPane prefHeight="401.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <center>
            <ScrollPane prefHeight="331.0" prefWidth="600.0" BorderPane.alignment="CENTER">
               <content>
                  <VBox fx:id="commentBox" prefHeight="348.0" prefWidth="598.0" spacing="10.0" />
               </content>
            </ScrollPane>
         </center>
         <bottom>
            <HBox alignment="TOP_CENTER" prefHeight="25.0" prefWidth="600.0" BorderPane.alignment="CENTER">
               <children>
                  <TextField fx:id="commentTextField" promptText="Enter comment here" />
                  <Button mnemonicParsing="false" onAction="#submitComment" text="Submit" />
               </children>
            </HBox>
         </bottom>
         <top>
            <Button mnemonicParsing="false" onAction="#goToMain" prefHeight="25.0" prefWidth="68.0" text="Back" BorderPane.alignment="CENTER" />
         </top>
      </BorderPane>
   </children>
</AnchorPane>
